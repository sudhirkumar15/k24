<div class="wrapper">

    {{> default/menu }}

    <div class="content-wrapper">
        <section class="content-header">
            <h1>Funnel Reports</h1>
        </section>

        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box filter-container collapsed-box">
                        <div class="box-header small">
                            <h3 class="box-title">Filters</h3>
                            <div class="pull-right box-tools">
                                <button class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <form action="" class="form-inline" id="datepicker-range">

                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="label-large">Funnels</label>
                                        <select  class="funnel-select-box" data-placeholder="Select funnel">
                                            <option {{{selectOption query.name 'notesFunnel'}}}  >Notes Funnel</option>
                                            <option {{{selectOption query.name 'highlightsFunnel'}}} >Highlights Funnel</option>
                                            <option {{{selectOption query.name 'bookmarksFunnel'}}}   >Bookmarks Funnel</option>
                                            <option {{{selectOption query.name 'searchFunnel'}}}  >Search Funnel</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="label-large">Date </label>
                                        <input type="text" class="form-control drpicker-input" name="daterange" value="{{fromDate}} - {{toDate}}" />

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="label-large">Site </label>
                                        <select  class="store-select-box"  data-placeholder="Select store">
                                            {{#each user.stores}}
                                                <option value="{{id}}">{{name}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="label-large">Institution</label>
                                        <div class="segment-option">
                                            <select multiple="true" class="select-box-large institution"
                                                data-placeholder="All Institutions"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="label-large">Filter by</label>
                                        <div class="segment-option">
                                            <select  class="select-box-large filter-by" data-placeholder="Select Filter">
                                                <option selected="selected" value="">Select Filter</option>
                                                <option value="device_platform">Platform</option>
                                                <option value="app_version">App Version</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row filter-val-row">
                                    <div class="col-md-12">
                                        <label class="label-large"> Filter options </label>
                                        <div class="segment-option">
                                            <select multiple="true"  class="select-box-large filters" data-placeholder=" Select Value">
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                     <div class="col-md-12">
                                        <label class="label-large">&nbsp; </label>

                                        <button class="btn btn-primary btnApply" type="button">
                                            <i class="fa fa-play"></i> &nbsp; Apply
                                        </button>
                                     </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-default funnel-activity-report">
                        <div class="box-header">
                            <h3 class="box-title">Funnels</h3>
                            <span class="box-title-help" name="" data-toggle="tooltip" data-placement="top" title="Funnels"><i class="fa fa-question-circle" aria-hidden="true"></i></span>

                            <div class="pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="book-funnel">
                                <div class="loading">
                                    <div class="spinner">
                                      <div class="rect1"></div>
                                      <div class="rect2"></div>
                                      <div class="rect3"></div>
                                      <div class="rect4"></div>
                                      <div class="rect5"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
           </div>

        </section>
    </div>
</div>
