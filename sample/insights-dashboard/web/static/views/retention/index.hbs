<div class="wrapper">

    {{> default/menu }}

    <div class="content-wrapper">
        <section class="content-header">
            <h1>Retention Reports</h1>
        </section>

        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box filter-container collapsed-box">
                        <div class="box-header small">
                            <h3 class="box-title">Filters</h3>
                            <div class="pull-right box-tools">
                                <button class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body has-dimension-control">
                            <form action="" class="form-inline" id="datepicker-range">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="label-large">Date</label>

                                        <input type="text" class="form-control drpicker-input" name="daterange" value="{{fromDate}} - {{toDate}}" />

                                        <div class="dimension-control pull-right">
                                            <label class="label-large dimension-label">Dimensions</label>
                                            <div class="btn-group">
                                                <button class="btn btn-default active" value="day">Day</button>
                                                <button class="btn btn-default" value="week">Week</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="label-large">Site</label>

                                        <select id='dd-store' class="store-select-box" data-placeholder="Select store">
                                            {{#each user.stores}}
                                                <option value="{{id}}">{{name}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="label-large">Institution</label>
                                        <div class="segment-option">
                                            <select multiple="true" class="select-box-large institution"
                                                data-placeholder="All Institutions"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                     <div class="col-md-12">
                                        <label class="label-large">&nbsp; </label>

                                        <button class="btn btn-primary btnApply" type="button">
                                            <i class="fa fa-play"></i> &nbsp; Apply
                                        </button>
                                     </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-default">
                        <div class="box-header">
                            <h3 class="box-title">User Retention</h3>
                            <span class="box-title-help" name="" data-toggle="tooltip" data-placement="top" title="The chart captures count of users who used the app on a specific day, returned to it the following day, 3rd day and 7th day"><i class="fa fa-question-circle" aria-hidden="true"></i></span>

                            <div class="pull-right">
                                <div class="btn-group chart-type">
                                    <button type="button" class="btn btn-transparent active" name="area" data-toggle="tooltip" data-placement="top" title="Area chart"><i class="fa fa-area-chart"></i></button>
                                    <button type="button" class="btn btn-transparent" name="column" data-toggle="tooltip" data-placement="top" title="Column chart"><i class="fa fa-bar-chart"></i></button>
                                    <button type="button" class="btn btn-transparent" name="line" data-toggle="tooltip" data-placement="top" title="Line chart"><i class="fa fa-line-chart"></i></button>
                                </div>
                                <button class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="retention-data">
                                <div class="loading">
                                    <div class="spinner">
                                        <div class="rect1"></div>
                                        <div class="rect2"></div>
                                        <div class="rect3"></div>
                                        <div class="rect4"></div>
                                        <div class="rect5"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
           </div>

        </section>
    </div>
</div>
